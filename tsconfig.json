{
  "compilerOptions": {
    "target": "ES2020",                         // Modern JS output
    "module": "ESNext",                         // Use ESNext for better Bun compatibility
    "moduleResolution": "Node",                 // Standard module resolution
    "strict": true,                             // Enable all strict type checks
    "esModuleInterop": true,                    // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,                  // Allow importing JSON files
    "outDir": "dist",                           // Compiled JS output
    "rootDir": "src",                           // Your source folder
    "allowSyntheticDefaultImports": true,
    "types": ["node"],                          // Include Node.js types
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist"]
}
